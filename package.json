    "@types/bunyan": "1.8.3",
    "@types/lodash": "^4.14.68",
    "@types/minimist": "^1.2.0",
    "@types/node": "^8.0.46",
    "concurrently": "^3.5.0",
    "shelljs": "^0.7.7",
    "tslint": "^5.5.0",
    "typescript": "^2.4.1"
  }
}
