{
  "name": "iw-block-party",
  "version": "0.0.1",
  "description": "iw block party module",
  "author": "Benjamin Schmitz",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Vortex375/iw-block-party.git"
  },
  "scripts": {
    "start": "npm run build && npm run watch",
    "build": "npm run build-ts && npm run tslint && npm run copy-static-assets",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\"",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json"
  },
  "dependencies": {
    "deepstream.io-client-js": "^2.3.4",
    "lodash": "^4.17.21",
    "minimist": "^1.2.0"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.8",
    "@types/lodash": "^4.14.161",
    "@types/minimist": "^1.2.0",
    "@types/node": "^17.0.10",
    "concurrently": "^5.1.0",
    "shelljs": "^0.8.3",
    "tslint": "^6.1.3",
    "typescript": "^4.5.5"
  },
  "publishConfig": {
    "directory": "dist"
  }
}
